<resources>

    <!-- Base application theme. -->
    <style name="IATSTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/buttonBorder</item>
        <item name="android:statusBarColor">@color/colorToolbar</item>
        <item name="android:textColorTertiary">@color/colorHeader</item>
        <item name="android:textColorPrimary">@color/gold</item>
        <item name="colorControlNormal">@color/buttonBorder</item>
        <item name="android:typeface">serif</item>
        <item name="android:windowBackground">@color/dark</item>
    </style>

    <style name="IATSTheme.Fullscreen" parent="IATSTheme">
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="IATSTheme.Light" parent="IATSTheme">
        <item name="android:textColorTertiary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="IATSTheme.Splash" parent="IATSTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="IATSTheme.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/colorToolbar</item>
        <item name="android:toolbarStyle">@style/IATSTheme.AppBarLayout.Toolbar</item>
    </style>

    <style name="IATSTheme.AppBarLayout.Toolbar" parent="android:Widget.Material.Toolbar">
        <item name="android:actionMenuTextAppearance">@style/IATSTheme.AppBarLayout.Toolbar.TextAppearance</item>
    </style>

    <style name="IATSTheme.AppBarLayout.Toolbar.TextAppearance" parent="android:TextAppearance.Material">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="IATSTheme.TextAppearance">

    </style>

    <style name="DrawerTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Header">

    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="Divider.Light" parent="Divider">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Header.TextAppearance">
        <item name="android:textColor">@color/colorHeader</item>
        <item name="android:textSize">32sp</item>
    </style>

    <!-- Spinner -->
    <style name="IATSTheme.Spinner">
        <item name="android:spinnerItemStyle">@style/IATSTheme.Spinner.SpinnerItem</item>
    </style>

    <style name="IATSTheme.Spinner.SpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/IATSTheme.Spinner.TextAppearance</item>
    </style>
    
    <style name="IATSTheme.Spinner.TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorToolbar</item>
    </style>

    <!-- PROFILE -->
    <style name="Profile">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Profile.Name" parent="Profile">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TABS -->
    <style name="IATSTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:textAllCaps">false</item>
        <item name="tabTextAppearance">@style/IATSTheme.TabLayout.TextAppearance</item>
    </style>

    <style name="IATSTheme.TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="IATSTheme.TextAppearance.Tab" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:typeface">sans</item>
    </style>

</resources>
